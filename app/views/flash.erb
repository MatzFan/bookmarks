<div id='flash-container'>
  <% if flash[:notice] %>
    <div class='flash notice'>
    <!-- <div id="notice"> -->
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:errors] && !flash[:errors].empty? %>
    Sorry, there were the following problems with the form.
    <ul> <!--      id="errors"> -->
      <% flash[:errors].each do |error| %>
        <li class='flash error'><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
